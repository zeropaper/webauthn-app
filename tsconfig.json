{
  "compilerOptions": {
    "lib": ["ESNext"],
    "checkJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "test",
    "**/__mocks__",
    "dist"
  ],
  "include": [
    "index.ts",
    "lib"
  ]
}