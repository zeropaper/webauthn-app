{
  "name": "webauthn-app",
  "version": "0.0.1",
  "description": "Very basic WebAuthn app aimed for authentication of personal experiments / projects.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon -e .ts -x 'ts-node index.ts'",
    "build": "tsc --outDir dist",
    "cleanup": "npm run build -- --build --clean",
    "postinstall": "npm run build",
    "test": "jest --passWithNoTests",
    "e2e:dev": "nodemon -w tests -e .ts -x 'npx playwright test --project=chromium --headed'",
    "e2e:server": "npm run build && NODE_PORT=9000 NODE_ENV=test node dist/playwright.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeropaper/webauthn-app.git"
  },
  "keywords": [
    "webauthn"
  ],
  "author": "Valentin \"zeropaper\" Vago",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeropaper/webauthn-app/issues"
  },
  "homepage": "https://github.com/zeropaper/webauthn-app#readme",
  "dependencies": {
    "@simplewebauthn/browser": "5.2.0",
    "@simplewebauthn/server": "5.2.0",
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.4",
    "@types/imap": "0.8.35",
    "@types/node": "16.11.36",
    "@types/nodemailer": "6.4.4",
    "base64url": "3.0.1",
    "connect-session-sequelize": "7.1.3",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "express-session": "1.17.3",
    "helmet": "5.0.2",
    "imap": "0.8.19",
    "mariadb": "3.0.0",
    "nodemailer": "6.7.5",
    "sequelize": "6.19.1",
    "socket.io": "4.5.1",
    "sqlite3": "5.0.8",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@types/cors": "2.8.12",
    "@types/jest": "27.5.1",
    "@types/supertest": "2.0.12",
    "jest": "28.1.0",
    "nodemailer-mock": "1.5.12",
    "nodemon": "2.0.16",
    "supertest": "6.2.3",
    "ts-jest": "28.0.2"
  }
}